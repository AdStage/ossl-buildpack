#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>


echo "-----> Fetching OpenSSL binaries"
mkdir -p $1/vendor/openssl
cd $1/vendor/openssl
curl https://moonshot-buildpack-ruby.s3.amazonaws.com/binaries/openssl.tgz -s -o - | tar xzf -
echo "-----> Got OpenSSL binaries"

echo "-----> Fetching ruby-2.0.0-p195 binaries"
mkdir -p $1/vendor/ruby
cd $1/vendor/ruby
curl https://moonshot-buildpack-ruby.s3.amazonaws.com/binaries/ruby-2.0-openssl-1.0.1e.tgz -s -o - | tar xzf -
echo "------> Got ruby binaries"

export PATH=$1/vendor/ruby/bin:$PATH
